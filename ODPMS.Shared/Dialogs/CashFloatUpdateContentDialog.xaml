<ContentDialog
    x:Class="ODPMS.Dialogs.CashFloatUpdateContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ODPMS.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Cash Float"
    PrimaryButtonText="OK"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="CashFloatUpdateContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="CashFloatUpdateContentDialog_SecondaryButtonClick"
    CornerRadius="8">

    <StackPanel Spacing="8">
        <TextBlock  x:Name="lbl_info"
                Grid.Row="3"/>
        <TextBlock Text="Enter new float amount."
                Grid.Row="3"/>
        <TextBox x:Name="cashFloatUpdate_txt"
                 PlaceholderText="Enter New Float"
                 BeforeTextChanging="TextBox_OnBeforeTextChanging"/>
    </StackPanel>

</ContentDialog>
