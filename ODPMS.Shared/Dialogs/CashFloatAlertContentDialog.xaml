<ContentDialog
    x:Class="ODPMS.Dialogs.CashFloatAlertContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ODPMS.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Cash Float"
    PrimaryButtonText="OK"
    PrimaryButtonClick="CashFloatAlertContentDialog_PrimaryButtonClick"
    CornerRadius="8">

    <StackPanel Spacing="8">
        <TextBlock Text="Cash float has not been added for this user today."
                Grid.Row="3"/>
        <TextBlock Text="Please ask the user to log in to enter his/her float."
                Grid.Row="3"/>
    </StackPanel>

</ContentDialog>
