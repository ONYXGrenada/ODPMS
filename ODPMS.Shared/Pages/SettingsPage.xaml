    <Grid Padding="56,0,0,0"
          Margin="5">
        <Grid.RowDefinitions>
            <!--Section 1: Theme Settings -->
            <RowDefinition Height="2*" />
            <!--Section 2: User Settings -->
            <RowDefinition Height="4*" />
            <!--Section 3: User Administration -->
            <RowDefinition Height="4*" />
            <!--Section 4: Ticket Administration -->
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <!--Section 1: Theme Settings -->

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,16,40,16"
                    Padding="16"
                    CornerRadius="8"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}"
                       Margin="0,12,0,0"
                       Text="Theme Mode" />
            <StackPanel x:Name="themePanel_sp" Margin="0,10,0,0">
                <RadioButton Tag="Light" Checked="OnThemeRadioButtonChecked" Content="Light" KeyDown="OnThemeRadioButtonKeyDown" />
                <RadioButton Tag="Dark" Checked="OnThemeRadioButtonChecked" Content="Dark" />
                <RadioButton Tag="Default" Checked="OnThemeRadioButtonChecked" Content="Use system setting" />
            </StackPanel>
        </StackPanel>

        <!--Section 2: User Settings -->

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,16,40,16"
                    Padding="16"
                    Spacing="8"
                    CornerRadius="8"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}"
                       Margin="0,12,0,0"
                       Text="User Settings"/>

            <StackPanel Orientation="Horizontal" 
                        Margin="5">
                <TextBlock MinWidth="110"
                           VerticalAlignment="Center"
                           Text="First Name:" />
                <TextBox x:Name="firstName_txt"
                         MinWidth="320"
                         MaxWidth="320"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                                Margin="5">
                <TextBlock MinWidth="110"
                                   VerticalAlignment="Center"
                                   Text="Last Name:" />
                <TextBox x:Name="lastName_txt"
                         MinWidth="320"
                         MaxWidth="320"/>
            </StackPanel>
            <Button Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Center"
                    Content="Update User"
                    Click="UpdateUser_Clicked" />
        </StackPanel>

        <!--Section 3: User Administration -->

        <StackPanel x:Name="userPanel_sp"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,16,40,16"
                    Padding="16"
                    Spacing="8"
                    CornerRadius="8"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}"
                       Margin="0,12,0,0"
                       Text="User Administration"/>
            <controls:DataGrid x:Name="user_dataGrid"
                               AutoGenerateColumns="True"
                               ItemsSource="{x:Bind Users}"/>
            <Button Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Center"
                    Content="Add User"
                    Click="AddUser_Clicked" />
        </StackPanel>

        <!--Section 4: Ticket Administration -->

        <StackPanel Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,16,40,16"
                    Padding="16"
                    CornerRadius="8"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
            <TextBlock Style="{StaticResource SubtitleTextBlockStyle}"
                       Margin="0,12,0,0"
                       Text="Ticket Administration" />
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <TextBlock MinWidth="110"
                           VerticalAlignment="Center"
                           Text="Subject:" />
                <TextBox x:Name="emailSubject_txt" 
                         MinWidth="240" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <TextBlock MinWidth="110"
                           VerticalAlignment="Center"
                           Text="Body:" />
                <TextBox x:Name="emailBody_txt"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         MinHeight="100"
                         MinWidth="240"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
