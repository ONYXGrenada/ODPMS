    <Grid>
        <ListView x:Name="TicketListView"
                  Margin="0"
                  HorizontalAlignment="Left">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" MinWidth="120" MaxWidth="320" Text="Ticket #" Margin="0,5,0,5"/>
                        <TextBlock Grid.Column="1" MinWidth="120" MaxWidth="320" Text="Type" Margin="0,5,0,5"/>
                        <TextBlock Grid.Column="2" MinWidth="120" MaxWidth="320" Text="Status" Margin="0,5,0,5"/>
                        <TextBlock Grid.Column="3" MinWidth="120" MaxWidth="320" Text="Cost" Margin="0,5,0,5"/>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" MinWidth="120" MaxWidth="320" Text="{Binding Number}" Margin="0,5,0,5"/>
                        <TextBlock Grid.Column="1" MinWidth="120" MaxWidth="320" Text="{Binding Type}" Margin="0,5,0,5"/>
                        <TextBlock Grid.Column="2" MinWidth="120" MaxWidth="320" Text="{Binding Status}" Margin="0,5,0,5"/>
                        <TextBlock Grid.Column="3" MinWidth="120" MaxWidth="320" Text="{Binding Cost}" Margin="0,5,0,5"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
