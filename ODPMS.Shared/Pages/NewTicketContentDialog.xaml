<ContentDialog
    x:Class="ODPMS.Pages.NewTicketContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ODPMS.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="New Ticket"
    PrimaryButtonText="Okay"
    PrimaryButtonStyle="{StaticResource AccentButtonStyle}"
    CloseButtonText="Cancel"
    PrimaryButtonClick="PrimaryButton_Clicked"
    CloseButtonClick="CloseButton_Clicked"
    Opened="NewTicket_Opened">


    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <!-- Content body -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Ticket Number: " TextWrapping="Wrap" />
            <TextBlock x:Name="ticketNumber_txt" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Ticket Description: " TextWrapping="Wrap" />
            <TextBlock x:Name="ticketDescription_txt" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ticket Created: " TextWrapping="Wrap" />
            <TextBlock x:Name="ticketCreated_txt" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Ticket Rate: " TextWrapping="Wrap" />
            <TextBlock x:Name="ticketRate_txt" />
        </StackPanel>
    </StackPanel>

</ContentDialog>
